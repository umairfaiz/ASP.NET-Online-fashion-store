<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>
    @RenderSection("head", required: false)
    <!-- Font awesome -->
    <link href=@Url.Content("/Content/css/font-awesome.css") rel="stylesheet">
    <!-- Bootstrap -->
    <link href=@Url.Content("/Content/css/bootstrap.css") rel="stylesheet">
    <!-- SmartMenus jQuery Bootstrap Addon CSS -->
    <link href=@Url.Content("/Content/css/jquery.smartmenus.bootstrap.css") rel="stylesheet">
    <!-- Product view slider -->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/css/jquery.simpleLens.css")>
    <!-- slick slider -->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/css/slick.css")>
    <!-- price picker slider -->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/css/nouislider.css")>
    <!-- Theme color -->
    <link id="switcher" href=@Url.Content("/Content/css/theme-color/lite-blue-theme.css") rel="stylesheet">

    <!-- Main style sheet -->
    <link href=@Url.Content("/Content/css/style.css") rel="stylesheet">

    <!-- Google Font -->
    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>

    @*header and footer
        In between header and footer open a div tag renderbody();*@

    <!-- Font awesome -->
    <link href=@Url.Content("/Content/css/font-awesome.css") rel="stylesheet">
    <!-- Bootstrap -->
    <link href=@Url.Content("/Content/css/bootstrap.css") rel="stylesheet">
    <!-- SmartMenus jQuery Bootstrap Addon CSS -->
    <link href=@Url.Content("/Content/css/jquery.smartmenus.bootstrap.css") rel="stylesheet">
    <!-- Product view slider -->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/css/jquery.simpleLens.css")>
    <!-- slick slider -->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/css/slick.css")>
    <!-- price picker slider -->
    <link rel="stylesheet" type="text/css" href=@Url.Content("/Content/css/nouislider.css")>
    <!-- Theme color -->
    <link id="switcher" href=@Url.Content("../Content/css/theme-color/dark-red-theme.css.css") rel="stylesheet">

    <!-- Main style sheet -->
    <link href=@Url.Content("/Content/css/style.css") rel="stylesheet">

    <!-- Google Font -->
    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- wpf loader Two -->
    @*<div id="wpf-loader-two">
            <div class="wpf-loader-two-inner">
                <span>Loading</span>
            </div>
        </div>
        <!-- / wpf loader Two -->
        <!-- SCROLL TOP BUTTON -->
        <a class="scrollToTop" href="#"><i class="fa fa-chevron-up"></i></a>*@
    <!-- END SCROLL TOP BUTTON -->
    <!-- Start header section -->

    <header id="aa-header">
        <!-- start header top  -->
        <div class="aa-header-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-top-area">
                            <!-- start header top left -->
                            <div class="aa-header-top-left">
                                <!-- start language -->
                                <div class="aa-language">
                                    <div class="dropdown">
                                        <a class="btn dropdown-toggle" href="@Url.Action("Change", "Language", new { LanguageAbbrevation = "en" }, null)" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                            <span><img src="@Url.Content("~/Content/")img/flag/english.jpg" alt="">@Html.ActionLink("English", "Change", "Language", new { LanguageAbbrevation = "en" }, null)</span>
                                        </a>
                                    </div>
                                </div>
                                <!-- / language -->
                                <!-- start currency -->
                                <div class="aa-currency">
                                    <div class="dropdown">
                                        <a class="btn dropdown-toggle" href="@Url.Action("Change", "Language", new { LanguageAbbrevation = "fr" }, null)" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                            <span><img src="@Url.Content("~/Content/")img/flag/french.jpg" alt="">@Html.ActionLink("French", "Change", "Language", new { LanguageAbbrevation = "fr" }, null)</span>
                                        </a>
                                    </div>
                                </div>
                                <!-- / currency -->
                                <!-- start cellphone -->
                                <div class="cellphone hidden-xs">
                                    <p><span class="fa fa-phone"></span>+94 2764779</p>
                                </div>
                                <!-- / cellphone -->
                            </div>
                            <!-- / header top left -->
                            <div class="aa-header-top-right">
                                <ul class="aa-head-top-nav-right">
                                    @if (Session["userSession"] != null)
                                    { 
                                        <li>@Html.ActionLink(CorrectTemp.Resources.lang.Account, "login", "Account")</li>
                                        <li>@Html.ActionLink(CorrectTemp.Resources.lang.Inbox, "view_Inbox", "Contact")</li>
                                        <li>@Html.ActionLink(CorrectTemp.Resources.lang.Wishlist, "view_Wlist", "Wishlist")</li>
                                        <li>@Html.ActionLink(CorrectTemp.Resources.lang.Logout, "logout", "Account")</li>
                                    }
                                    else
                                    {
                                        <li>@Html.ActionLink(CorrectTemp.Resources.lang.Login, "login", "Account")</li>
                                        @*<li><a href="" data-toggle="modal" data-target="#login-modal">@CorrectTemp.Resources.lang.Login</a></li>*@
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- / header top  -->
        <!-- start header bottom  -->
        <div class="aa-header-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-bottom-area">
                            <!-- logo  -->
                            <div class="aa-logo">
                                <!-- Text based logo -->
                                <a href="#">
                                    <span class="fa fa-shopping-cart"></span>
                                    <p>daily<strong>Shop</strong> <span>Your Shopping Partner</span></p>
                                </a>
                                <!-- img based logo -->
                                <!-- <a href="index.html"><img src="img/logo.jpg" alt="logo img"></a> -->
                            </div>
                            <!-- / logo  -->
                            <!-- cart box -->
                            <div class="aa-cartbox">
                                <span class="aa-cart-title">
                                    @if (Session["userSession"] != null)
                                    {
                                        <span class="fa fa-user"></span>
                                        <text>Welcome  @Session["userSession"].ToString(), </text>
                                    }
                                </span>
                                <!-- search box -->
                                <div class="aa-search-box">
                                   
                                </div>
                            </div>
                            @if (ViewBag.Success != null)
                            {
                                <font color="RED"> @ViewBag.Success</font>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- / header bottom  -->
    </header>
    <!-- / header section -->
    <!-- menu -->
    <section id="menu">
        <div class="container">
            <div class="menu-area">
                <!-- Navbar -->
                <div class="navbar navbar-default" role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <!-- Left nav -->
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink(CorrectTemp.Resources.lang.Home, "Index", "Home")</li>
                            <li> 
                                @Html.ActionLink(CorrectTemp.Resources.lang.Men, "Product", "Product")
                            </li>
                            <li>
                                @Html.ActionLink(CorrectTemp.Resources.lang.Women, "women", "Product")
                            </li>
                            <li>@Html.ActionLink(CorrectTemp.Resources.lang.Contact, "Contact", "Contact")</li>
                            <li>@Html.ActionLink(CorrectTemp.Resources.lang.Inbox, "view_Inbox", "Contact")</li>
                            @*<li>@Html.ActionLink(CorrectTemp.Resources.lang.Language, "Index", "Language")</li>*@
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
    </section>
    <!-- / menu -->

    <div>
        @RenderBody()
    </div>


    <!-- footer -->
    <footer id="aa-footer">
        <!-- footer bottom -->
        <div class="aa-footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-footer-top-area">
                            <div class="row">
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <h3>Main Menu</h3>
                                        <ul class="aa-footer-nav">
                                            <li><a href="#">@CorrectTemp.Resources.lang.Home</a></li>
                                            <li><a href="#">@CorrectTemp.Resources.lang.Our_Services</a></li>
                                            <li><a href="#">@CorrectTemp.Resources.lang.Our_Products</a></li>
                                            <li><a href="#">@CorrectTemp.Resources.lang.About_us</a></li>
                                            <li><a href="#">@Html.ActionLink("Contact Us", "Contact", "Contact")</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <div class="aa-footer-widget">
                                            <h3>@CorrectTemp.Resources.lang.Useful_Links</h3>
                                            <ul class="aa-footer-nav">
                                                <li><a href="#">@CorrectTemp.Resources.lang.Site_map</a></li>
                                                <li><a href="#">@CorrectTemp.Resources.lang.Search</a></li>
                                                <li><a href="#">FAQ</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <div class="aa-footer-widget">
                                            <h3>@CorrectTemp.Resources.lang.Contact_us</h3>
                                            <address>
                                                <p> 388, Dr Colvin R de Silva Mawatha, Colombo, Sri Lanka</p>
                                                <p><span class="fa fa-phone"></span>+94 2764779</p>
                                                <p><span class="fa fa-envelope"></span>dailyshop@gmail.com</p>
                                            </address>
                                            <div class="aa-footer-social">
                                                <a href="#"><span class="fa fa-facebook"></span></a>
                                                <a href="#"><span class="fa fa-twitter"></span></a>
                                                <a href="#"><span class="fa fa-google-plus"></span></a>
                                                <a href="#"><span class="fa fa-youtube"></span></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- footer-bottom -->
        <div class="aa-footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-footer-bottom-area">
                            <p>Designed by <a href="http://www.markups.io/">MarkUps.io</a></p>
                            <div class="aa-footer-payment">
                                <span class="fa fa-cc-mastercard"></span>
                                <span class="fa fa-cc-visa"></span>
                                <span class="fa fa-paypal"></span>
                                <span class="fa fa-cc-discover"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- / footer -->
    <!-- Login Modal -->
    <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4>Login or Register</h4>
                    @using (Html.BeginForm("login", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                    {
                        <label for="">Username<span>*</span></label>
                        <input type="text" name="username" placeholder="Username">
                        <label for="">Password<span>*</span></label>
                        <input type="password" name="Password" placeholder="Password">
                        <button class="aa-browse-btn" type="submit">Login</button>
                        <p class="aa-lost-password"><a href="#">@Html.ActionLink("Lost your password?", "resetPassword", "Account")</a></p>
                        <div class="aa-register-now">
                            No account?@Html.ActionLink("Register now!", "login", "Account")
                        </div>
                    }
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.js"></script>
    <!-- SmartMenus jQuery plugin -->
    <script type="text/javascript" src="~/Content/js/jquery.smartmenus.js"></script>
    <!-- SmartMenus jQuery Bootstrap Addon -->
    <script type="text/javascript" src="~/Content/js/jquery.smartmenus.bootstrap.js"></script>
    <!-- Product view slider -->
    <script type="text/javascript" src="~/Content/js/jquery.simpleGallery.js"></script>
    <script type="text/javascript" src="~/Content/js/jquery.simpleLens.js"></script>
    <!-- slick slider -->
    <script type="text/javascript" src="~/Content/js/slick.js"></script>
    <!-- Price picker slider -->
    <script type="text/javascript" src="~/Content/js/nouislider.js"></script>

    <!-- Custom js -->
    <script src="~/Content/js/custom.js"></script>

</body>
</html>
