@model CorrectTemp.Models.userAccount

@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- catg header banner section -->
<section id="aa-catg-head-banner">
    <img src="@Url.Content("~/Content/")img/wishlist-header.jpg" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>Account</h2>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Account</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->
<!-- Cart view section -->
<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>Login</h4>
                                @if (ViewBag.Message != null)
                                {
                                    <font color="RED"> @ViewBag.Message</font>
                                }
                                @using (Html.BeginForm("login", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    @Html.Label("Username")
                                    @Html.TextBoxFor(m => m.username, new { placeholder = "Username" })
                                    @Html.Label("Password")
                                    @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", @type = "password" })

                                    <input input type="submit" value="Login" class="aa-browse-btn">
                                    <p class="aa-lost-password"><a href="#">@Html.ActionLink("Lost your password?", "resetPassword", "Account")</a></p>
                                    
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="aa-myaccount-register   ">
                                <h4>Register</h4>
                                @if (ViewBag.Message != null)
                                {
                                    <font color="RED"> @ViewBag.Message</font>
                                }
                                @using (Html.BeginForm("register", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                        @Html.Label("Set Username")
                                        @Html.TextBoxFor(m => m.username, new { placeholder = "Your name"})
                                        <input type="hidden" name="username" value="">
                                        @Html.Label("Set Password")
                                        @Html.TextBoxFor(m => m.Password, new { placeholder = "Password", @type = "password" })
                                        <input type="hidden" name="Password" value="">
                                        @Html.Label("Shipping address")
                                        @Html.TextBoxFor(m => m.shippingAddress, new { placeholder = "Your shipping address" })
                                        <input type="hidden" name="shippingAddress" value="">
                                        @Html.Label("Card number")
                                        @Html.TextBoxFor(m => m.CardNumber, new { placeholder = "Your card number" })
                                        @Html.Label("Email")
                                        @Html.TextBoxFor(m => m.email, new { placeholder = "Your email" })

                                        <input input type="submit" value="Register" class="aa-browse-btn">
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->
