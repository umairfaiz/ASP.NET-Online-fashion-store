@model CorrectTemp.Models.Message
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- catg header banner section -->
<section id="aa-catg-head-banner">
    <img src="@Url.Content("~/Content/")img/contact-header.jpg" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>Contact</h2>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a></li>
                    <li class="active">Contact</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->
<!-- start contact section -->
<section id="aa-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-contact-area">
                    <div class="aa-contact-top">
                        <h2>How can we help you?</h2>
                        <p>Talk to our team regarding any concern, so we can improve to serve you better!</p>
                    </div>
                    <!-- contact map -->
                    <div class="aa-contact-map">
                        <div style="overflow:hidden;width:1500px;height:500px;resize:none;max-width:100%;">
                            <div id="gmap-canvas" style="height:100%; width:100%;max-width:100%;"><iframe width="1500" height="500" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJB_64PG1Z4joRYaZj1e3iCis&key=AIzaSyARgtR2D_sUqIIVpcEHRXmNLe0DwVGBkHI" allowfullscreen></iframe></div><a class="embed-map-code" href="http://www.szablonypremium.pl" id="auth-maps-data">www.szablonypremium.pl</a>
                            <style>
                                #gmap-canvas .map-generator {
                                    max-width: 100%;
                                    max-height: 100%;
                                    background: none;
                                }
                            </style>
                        </div>
                    </div>
                    <!-- Contact address -->
                    <div class="aa-contact-address">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="aa-contact-address-left">
                                    @if (ViewBag.Message != null)
                                    {
                                        <font color="RED"> @ViewBag.Message</font>
                                    }
                                    
                                    @using (Html.BeginForm("user_Feedback", "Contact", FormMethod.Post, new { @class = "comments-form contact-form" }))
                                    {
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.TextBoxFor(m => m.username, new { placeholder = "Name", @class="form-control"})
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.TextBoxFor(m => m.subject, new { placeholder = "Subject", @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.TextAreaFor(m => m.messageDetail, new { placeholder = "Message", @class = "form-control" })
                                        </div>
                                        <button class="aa-secondary-btn">Send</button>
                                    }

                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="aa-contact-address-right">
                                    <address>
                                        <p>DailyShop</p>
                                        <p><span class="fa fa-home"></span>388, Dr Colvin R de Silva Mawatha, Colombo, Sri Lanka</p>
                                        <p><span class="fa fa-phone"></span>+94 2764779</p>
                                        <p><span class="fa fa-envelope"></span>Email: admin@dailyshop.com</p>
                                    </address>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
